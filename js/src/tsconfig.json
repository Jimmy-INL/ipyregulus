{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "lib": ["dom", "es2017"],
    "noEmitOnError": true,
    "strictNullChecks": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "outDir": "../",
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
